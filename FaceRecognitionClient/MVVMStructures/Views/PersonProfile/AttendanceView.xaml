<UserControl x:Class="FaceRecognitionClient.MVVMStructures.Views.PersonProfile.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FaceRecognitionClient.MVVMStructures.Views.PersonProfile"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <StackPanel Margin="20">
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    Width="100"
                    Height="32"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Background="#6A5ACD"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand" />

            <Button Content="Export"
                    Command="{Binding ExportCommand}"
                    Width="100"
                    Height="32"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Background="#6A5ACD"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand" />

            <Border Background="White"
                    CornerRadius="10"
                    SnapsToDevicePixels="True"
                    BorderBrush="#6A5ACD"
                    BorderThickness="1">

                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,1200,800"/>
                </Border.Clip>

                <DataGrid ItemsSource="{Binding AttendanceRecords}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          RowHeight="40"
                          GridLinesVisibility="None"
                          ColumnHeaderHeight="40"
                          FontSize="14"
                          BorderThickness="0"
                          Background="White"
                          HorizontalGridLinesBrush="Transparent"
                          VerticalGridLinesBrush="Transparent">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#6A5ACD" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>

                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" />
                        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" />
                        <DataGridTextColumn Header="Government ID" Binding="{Binding GovernmentId}" Width="2*" />
                        <DataGridTextColumn Header="Attendance Date"
                                             Binding="{Binding AttendanceTime, StringFormat=dd/MM/yyyy HH:mm}"
                                             Width="2*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
